<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity2"
    android:background="#276ACA89"

    >

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neumorph_shadowElevation="8dp"
        app:neumorph_shapeType="flat"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Repeater"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="00dp"
            android:textColor="#020202"
            />

    </soup.neumorphism.NeumorphCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Text"
        app:errorEnabled="true"
        android:layout_marginTop="0dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>


    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/fourcona_dag"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            >


            <EditText
                android:id="@+id/inputNumber"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Number"
                android:gravity="center"
                android:textSize="22dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="#009688"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            >


            <LinearLayout
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Reset ❌"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="0dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        app:neumorph_shadowElevation="8dp"
        app:neumorph_shapeType="flat"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/repeatButton"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:text="Repeat"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="00dp"
            android:textColor="#FF0606"
            />

    </soup.neumorphism.NeumorphCardView>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/bottom_curved"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:background="@drawable/bottom_curved"
            >


            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />



        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:background="@drawable/two_color"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_content_copy_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="0dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/share"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="0dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>