<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F64343"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#C31436"
        android:padding="16dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Love Calculator"
                android:textColor="#FFFFFF"
                android:textSize="24sp"


                />



        </LinearLayout>

    </LinearLayout>






    <ImageView
        android:id="@+id/loveImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"

        />



    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="33dp"
        android:background="@drawable/fouecona_aktukata"

        >

        <TextView
            android:id="@+id/maleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"


            />


    </LinearLayout>


    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/kit"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"

        />



    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="103dp"
        android:background="@drawable/fouecona_aktukata"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:id="@+id/femaleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"


            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/go"
        android:layout_gravity="center"
        >



        <TextView
            android:id="@+id/lovePercentageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"


            />






    </LinearLayout>















</LinearLayout>
