<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lover 😍"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textStyle="bold"

        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        >







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="62dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/boy"
                    android:scaleType="centerCrop"

                    />
            </androidx.cardview.widget.CardView>



            <EditText
                android:id="@+id/editTextMale"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint=" Enter Male Name"
                android:padding="10dp"
                android:background="@drawable/three_color_curved"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />


        </LinearLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/box"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_gravity="end"
            >

            <EditText
                android:id="@+id/editTextFemale"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter Female Name"
                android:padding="10dp"
                android:background="@drawable/three_color_curved"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="62dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/gril"
                    android:scaleType="centerCrop"

                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>










        <Button
            android:id="@+id/calculateButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:backgroundTint="#FFEB3B"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="19dp"

            />



    </LinearLayout>






</RelativeLayout>